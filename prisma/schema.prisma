// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// TABLES CORE (toujours présentes)
// ============================================

model Company {
  id        String   @id @default(cuid())
  name      String
  siret     String?  @unique
  vatNumber String?
  address   String?
  city      String?
  zipCode   String?
  country   String   @default("FR")
  currency  String   @default("EUR")
  timezone  String   @default("Europe/Paris")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users     User[]
  roles     Role[]
  modules   CompanyModule[]
  settings  Setting[]

  @@map("companies")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  companyId String
  roleId    String?
  firstName String?
  lastName  String?
  avatarUrl String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  company Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  role    Role?    @relation(fields: [roleId], references: [id])

  @@index([companyId])
  @@index([email])
  @@map("users")
}

model Role {
  id        String   @id @default(cuid())
  companyId String
  name      String
  permissions Json   // Array of permission strings
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  users   User[]

  @@index([companyId])
  @@map("roles")
}

model CompanyModule {
  id        String   @id @default(cuid())
  companyId String
  moduleId  String   // Reference to registry module ID
  enabled   Boolean  @default(false)
  config    Json?    // Module-specific configuration
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, moduleId])
  @@index([companyId])
  @@map("company_modules")
}

model Setting {
  id        String   @id @default(cuid())
  companyId String
  key       String
  value     Json
  type      String   // 'string', 'number', 'boolean', 'json'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, key])
  @@index([companyId])
  @@map("settings")
}

// ============================================
// TABLES FACTURATION (Module billing)
// ============================================

model Customer {
  id        String   @id @default(cuid())
  companyId String
  name      String
  email     String?
  phone     String?
  address   String?
  city      String?
  zipCode   String?
  country   String?
  taxId     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  invoices Invoice[]
  quotes   Quote[]

  @@index([companyId])
  @@index([email])
  @@map("customers")
}

model Invoice {
  id         String      @id @default(cuid())
  companyId  String
  customerId String
  number     String
  status     String      @default("draft") // draft, sent, paid, overdue, cancelled
  amount     Decimal     @db.Decimal(10, 2)
  taxAmount  Decimal     @default(0) @db.Decimal(10, 2)
  totalAmount Decimal    @db.Decimal(10, 2)
  issueDate  DateTime
  dueDate    DateTime
  paidDate   DateTime?
  notes      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // Relations
  customer Customer      @relation(fields: [customerId], references: [id])
  items    InvoiceItem[]

  @@unique([companyId, number])
  @@index([companyId])
  @@index([customerId])
  @@index([status])
  @@map("invoices")
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  description String
  quantity    Decimal  @db.Decimal(10, 2)
  unitPrice   Decimal  @db.Decimal(10, 2)
  taxRate     Decimal  @default(0) @db.Decimal(5, 2)
  total       Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())

  // Relations
  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("invoice_items")
}

model Quote {
  id         String   @id @default(cuid())
  companyId  String
  customerId String
  number     String
  status     String   @default("draft") // draft, sent, accepted, rejected, expired
  amount     Decimal  @db.Decimal(10, 2)
  validUntil DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  customer Customer @relation(fields: [customerId], references: [id])

  @@unique([companyId, number])
  @@index([companyId])
  @@index([customerId])
  @@map("quotes")
}

// ============================================
// TABLES COMPTABILITÉ (Module accounting)
// ============================================

model ChartOfAccount {
  id        String   @id @default(cuid())
  companyId String
  code      String
  name      String
  type      String   // asset, liability, equity, revenue, expense
  parentId  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, code])
  @@index([companyId])
  @@map("chart_of_accounts")
}

model AccountingEntry {
  id            String   @id @default(cuid())
  companyId     String
  fiscalYearId  String?
  accountId     String
  debit         Decimal  @default(0) @db.Decimal(10, 2)
  credit        Decimal  @default(0) @db.Decimal(10, 2)
  description   String
  reference     String?
  entryDate     DateTime
  createdAt     DateTime @default(now())

  @@index([companyId])
  @@index([fiscalYearId])
  @@index([accountId])
  @@map("accounting_entries")
}

// ============================================
// TABLES RH (Module hr)
// ============================================

model Employee {
  id            String   @id @default(cuid())
  companyId     String
  userId        String?  @unique
  employeeNumber String
  hireDate      DateTime
  position      String?
  salary        Decimal? @db.Decimal(10, 2)
  department    String?
  isActive      Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([companyId])
  @@index([userId])
  @@map("employees")
}

// ============================================
// TABLES CRM (Module crm)
// ============================================

model Contact {
  id        String   @id @default(cuid())
  companyId String
  type      String   // customer, prospect, supplier
  name      String
  email     String?
  phone     String?
  score     Int      @default(0)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([email])
  @@map("contacts")
}

// ============================================
// TABLES STOCK (Module inventory)
// ============================================

model Product {
  id            String   @id @default(cuid())
  companyId     String
  sku           String
  name          String
  description   String?
  price         Decimal  @db.Decimal(10, 2)
  stockQuantity Decimal  @default(0) @db.Decimal(10, 2)
  minStock      Decimal? @db.Decimal(10, 2)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([companyId, sku])
  @@index([companyId])
  @@map("products")
}

// ============================================
// TABLES PROJETS (Module projects)
// ============================================

model Project {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  description String?
  status      String   @default("planning") // planning, active, on-hold, completed, cancelled
  startDate   DateTime?
  endDate     DateTime?
  budget      Decimal? @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@map("projects")
}

// ============================================
// TABLES DOCUMENTS (Module documents)
// ============================================

model Document {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  type        String
  storagePath String
  size        Int
  mimeType    String
  folder      String?
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@map("documents")
}

// ============================================
// TABLES WORKFLOWS (Module workflows)
// ============================================

model Workflow {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  description String?
  trigger     Json     // Trigger configuration
  steps       Json     // Steps configuration
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@map("workflows")
}

// ============================================
// TABLES INTÉGRATIONS (Module integrations)
// ============================================

model Integration {
  id          String    @id @default(cuid())
  companyId   String
  connectorId String    // Reference to registry integration ID
  name        String
  config      Json      // Encrypted configuration
  status      String    @default("active") // active, inactive, error
  lastSync    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([companyId])
  @@index([connectorId])
  @@map("integrations")
}

// ============================================
// TABLES GESTION VOCALE (Module voice)
// ============================================

model VoiceCommand {
  id        String   @id @default(cuid())
  companyId String
  command   String
  action    Json     // Action configuration
  module    String?  // Module concerned
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([command])
  @@map("voice_commands")
}

model VoiceSession {
  id            String   @id @default(cuid())
  companyId     String
  userId        String
  transcription String
  action        String?
  success       Boolean
  createdAt     DateTime @default(now())

  @@index([companyId])
  @@index([userId])
  @@map("voice_sessions")
}

